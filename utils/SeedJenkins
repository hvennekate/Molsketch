  properties {
    githubProjectUrl 'https://github.com/hvennekate/Molsketch'
  }
  definition {
    cpsScm {
      lightweight
      scriptPath 'sources/utils/Jenkinsfile-windows'
      scm {
        git {
          branch('main')
          remote {
            github 'hvennekate/Molsketch'
          }
          extensions {
            wipeWorkspace()
            relativeTargetDirectory 'sources'
          }
        }
      }
    }
  }
}
